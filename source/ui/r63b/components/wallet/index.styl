.wallet
	position fixed
	width 190px
	right 5px
	top 0
	z-index 1
	background-color:rgba(40, 40, 40, .65)
	border 2px solid rgba(255, 255, 255, .2)
	border-radius 6px
	box-shadow: 0 2px 0 0 rgba(0, 0, 0, .7), 1px 0 0 0 rgba(0, 0, 0, .7), -1px 0 0 0 rgba(0, 0, 0, .7)
	padding 3px
	border-top 0
	border-top-left-radius 0
	border-top-right-radius 0
	display flex
	flex-direction row
	justify-content space-between

	font-size 11px
	font-weight 600

	.icon::before
		filter drop-shadow(0 1px 0 rgba(0, 0, 0, .3))

	.currencies
		display flex
		flex-direction column
		justify-content space-between
		flex-grow 1

		.currency-item
			height 19px
			overflow hidden
			display flex
			align-items center
			justify-content flex-end
			text-shadow 0 1px rgba(0, 0, 0, .3);
			cursor pointer

			.icon
				width 18px

				&::before
					float right
					width 15px
					height 15px

				&.icon-credit::before
					background-image url('hotelview/notifications/icons/credit.png')

				&.icon-diamond::before
					background-image url('hotelview/notifications/icons/diamond.png')
					
				&.icon-ducket::before
					background-image url('hotelview/notifications/icons/ducket.png')

			&.currency-diamonds
				color #38c5e4

				&:hover
					color #84fefe

					.icon::before
						background-image url('hotelview/notifications/icons/diamond_glow.png')
			
			&.currency-credits
				color #d1ab21

				&:hover
					color #fefb6e

					.icon::before
						background-image url('hotelview/notifications/icons/credit_glow.png')

			&.currency-duckets
				color #d283cf

				&:hover
					color #fed3fe

					.icon::before
						background-image url('hotelview/notifications/icons/ducket_glow.png')
			

	.club
		display flex
		flex-direction column
		justify-content center
		align-items center
		border-radius 8px
		background #403830
		width 48px
		margin 0 6px
		color #03babd
		cursor pointer

		.icon-hc
			margin-bottom 6px

		&:hover
			color #4cfefe

			.icon-hc::before
				background-image url('hotelview/notifications/icons/hc_glow.png')

	.buttons
		display flex
		flex-direction column
		justify-content space-between
		border-left 1px solid rgba(75, 75, 75, .25)
		padding-left 6px

		&>*
			width 61px
			border 1px solid #000
			box-shadow inset 0 -1px 0 0 rgba(0, 0, 0, .1);
			font-weight 300
			border-radius 4px
			text-align center
			font-size 12px
			color #fff
			height 19px
			display flex
			justify-content center
			align-items center
			cursor pointer

			&:hover
				border-width 2px

			&:not(:last-child)
				margin-bottom 2px

		.icon-logout::before
			background url('hotelview/notifications/icons/logout.png')
			width 13px
			height 11px

		.icon-settings::before
			background url('hotelview/notifications/icons/settings.png')
			width 12px
			height 12px
			

		.btn-blue
			background-color #207ab4

		.btn-red
			background-color #dd5246

		.btn-gray
			background-color #716a85


