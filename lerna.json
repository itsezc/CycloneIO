{
    "packages": [
        "packages/client",
        "packages/utils"
    ],
    "npmClient": "npm",
    "command": {
        "publish": {
            "ignoreChanges": [
                "ignored-file",
                "*.md"
            ],
            "message": "chore(release): publish"
        },
        "bootstrap": {
            "ignore": "component-*",
            "npmClientArgs": [
                "--no-package-lock"
            ]
        }
    },
    "version": "independent"
}