			<bodypart id="rightarm" action="CarryItem" frame="0"/>		
			<bodypart id="rightitem" action="Default" frame="1" base="fx101_1" >
				<item id="ri" base="fx101_1"/>
			</bodypart>
		</frame>
		<frame>		
			<bodypart id="rightarm" action="CarryItem" frame="0"/>		
			<bodypart id="rightitem" action="CarryItem" frame="1" base="fx101_1">
