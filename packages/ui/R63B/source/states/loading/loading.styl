@import '../../fonts'
@import '../../variables'

body
	font-family: 'Ubuntu'
	max-width: 100%
	max-height: 100%
	overflow: hidden
	margin: 0
	background: $loading[background]
	color: $loading[color]
	user-select: none

.loading
	width: 500px
	height: 600px
	position: absolute
	top: 50%
	left: 50%
	margin-top: -300px
	margin-left: -250px

	& .splash
		display block
		background-image: url(./r63b/loading/stack.png)
		width: 490px
		height: 434px
		margin: 0 auto
		margin-left: -15px
		margin-bottom: 20px
		position: relative

		& .photo
			height: 320px
			width: 320px
			position: absolute
			left: 95px
			top: 50px
			background-image: url(./r63b/loading/photo.png)

		& .frame
			background-image: url(./r63b/loading/frame.png)
			background-repeat: no-repeat
			height: 500px
			width: 434px
			position: absolute
			left: 0
			top: 0


	& .text
		text-align: center
		margin: 0 auto
		margin-bottom: 20px
		font-size: 28px

	& .loading-progress
		width: 400px
		background-color: black
		border-radius: 2px
		margin: 0 auto
		border: 1px solid white
		box-shadow: inset 0 0 0 4px rgba(0, 0, 0, 1)
		padding: 4px
		margin-bottom: 20px

		& .bar
			background-image: -webkit-linear-gradient(bottom, #8CA1AD 50%, #BACAD3 50%)
			display: block
			height: 20px
			width: 0%
			transition: width 1s

	& .percent
		font-weight 600
		text-align: center
		display: block
		color: #8D8E8E
