canvas
	zoom 100%

.client
	z-index 0
	display block
	position fixed
	background rgba(0, 0, 0, 1)
	height 100%
	width 100%
	//filter grayscale(100%)

	.hotel
		z-index: 1
		display block
		position fixed
		height calc(100% - 50px)
		width 100%
		background-color #68E5FF
		background url('https://images.habbo.com/c_images/reception/rainbow19_background_left.png'), 
				   url('http://habboo-a.akamaihd.net/c_images/reception/background_right_easter2016.png'),
				   url('hotelview/drape.png'),
				   url('https://images.habbo.com/c_images/reception/rainbow19_background_gradient.png')
		background-repeat no-repeat, no-repeat, no-repeat, repeat-x
		background-position left bottom, right bottom, 100px top
		background-size auto, auto, auto, 1% 100%


		.bonus
			width 505px
			height 60px
			max-height 60px
			max-width 505px
			background rgba(255, 255, 255, 0.2)
			border-bottom 1px solid rgba(0, 0, 0, 0.2)
			box-shadow 0px 1px 0px 0px rgba(255, 255, 255, 0.2)
			border-radius 6px
			margin-top 10px
			margin-left 275px
			position absolute
			

			.thumbnail
				display inline-block
				float left
				margin 3px 20px 0px 20px
				width 55px

			.offer
				display inline-block
				float left

				h2
					font-size 18px
					margin 5px 0px 5px 15px

			.subscribe
				float right
				margin 8px 5px 0px 0px

	.illumina-button
		padding: 5px;
		padding-left: 20px;
		text-align: center;
		padding-right: 20px;
		border: 1px solid #919191;
		border-radius: 6px;
		cursor: pointer;
		font-weight: 600;
		font-size: 11px;
		text-shadow: 1px 1px 1px #FFF;
		background-image linear-gradient(to top, #D9D9D9 50%, #E2E2E2 50%)
		color: #000;
		box-shadow 0px 1px 0px 0px #FFFFFF

	.campaigns
		width 890px
		margin-left 275px
		height 100%
		z-index 2
		overflow-x auto
		margin-top 100px
	
		.campaign
			color #ffffff
			float left
			width 60%
			position relative
			display inline-block
			margin-bottom 100px 

			&.small 
				width 40%

				.content
					margin-left 0

			img 
				float left
			
			.content
				max-width 255px 
				float left
				margin-top 10px
				margin-left 40px

				span
					// height 100px
					margin 0
					display block

				h1
					font-weight 600
					display block 
					font-size 18px
					line-height 18px
					margin-bottom 5px

				p
					font-weight 400
					font-size 12px
					line-height 14px
					margin-bottom 10px