.dialog:not(.illumina)
	z-index 2
	display: flex
	flex-direction: column
	position: fixed
	font-family: 'Ubuntu'
	background #E9E9E1
	padding 0px
	border-radius 8px
	box-sizing border-box
	border 1px solid black
	border-bottom 2px solid black
	font-size 12px
	color black
	overflow hidden
	
	.dialog-header
		cursor grab
		background #367898
		box-shadow inset -2px 0 0 0 #408CAF,
		   inset 0 2px 0 0 #408CAF,
		   inset 2px 0 0 0 #408CAF
		color white
		font-weight bold
		border-bottom 1px solid black
		border-top-right-radius 8px
		border-top-left-radius 8px
		position relative
		height 33px
		display flex
		flex-direction row
		align-items center
		justify-content center

		.dialog-header-actions
			display flex
			flex-direction row
			align-items flex-end
			position absolute
			right 8px

			&>*:not(:last-child)
				margin-right 5px
			
		&:active
			cursor grabbing

	
	.dialog-body
		position relative
		height: calc(100% - 30px);

		.dialog-resizehandle
			display block
			height 19px
			width 19px
			position absolute
			background url('r63b/dialog/resize_handle.png')
			bottom 3px
			right 3px
			cursor pointer